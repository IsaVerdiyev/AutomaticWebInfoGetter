<UserControl x:Class="AutomaticWebInfoGetterWpfLib.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomaticWebInfoGetterWpfLib.Views"
             xmlns:nav="clr-namespace:AutomaticWebInfoGetterWpfLib.Navigation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/SettingsViewDictionary.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center">Tasks info</TextBlock>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <ListBox ScrollViewer.CanContentScroll="True" 
                         ItemsSource="{Binding SettingInfos}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.ContextMenu>
                                    <ContextMenu>
                                         <MenuItem Header="Edit"/>
                                        <MenuItem Header="Delete"/>
                                    </ContextMenu>
                                </StackPanel.ContextMenu>
                                <TextBlock Text="{Binding URL}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Grid.Row="2" 
                        Width="50" 
                        HorizontalAlignment="Right"
                        Content="+"
                        Command="{Binding AddSettingCommand}"
                        CommandParameter="{x:Static nav:VM.AddSetting}"/>
                
            </Grid>
            <UniformGrid Grid.Column="1"
                         Rows="9"
                         IsEnabled="{Binding SettingInfoVisibility, Mode=TwoWay}">
                <TextBlock Style="{StaticResource InfoHeadingsStyle}" 
                           Text="URL"/>
                <TextBlock Style="{StaticResource InfoContentsStyle}" 
                           Text="{Binding SelectedSettingInfo.URL}"/>
                <TextBlock Style="{StaticResource InfoHeadingsStyle}"
                           Text="XPath"/>
                <TextBlock Style="{StaticResource InfoContentsStyle}"
                           Text="{Binding SelectedSettingInfo.XPath}"/>
                <TextBlock Style="{StaticResource InfoHeadingsStyle}"
                           Text="Single node or list of nodes"/>
                <TextBlock Style="{StaticResource InfoContentsStyle}"
                           Text="{Binding SelectedSettingInfo.SingleNode, Converter={StaticResource IsSingleBoolToStringConverter}}">Single</TextBlock>
                <UniformGrid Columns="3">
                    <StackPanel>
                        <TextBlock Style="{StaticResource InfoHeadingsStyle}"
                                   Text="StartDate"/>
                        <TextBlock Style="{StaticResource InfoContentsStyle}"
                                   Text="{Binding SelectedSettingInfo.TimeInfo.StartDate}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Style="{StaticResource InfoHeadingsStyle}"
                                   Text="Delays between queries"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource InfoContentsStyle}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource TimespanToStringMultiConverter}">
                                        <Binding Path="SelectedSettingInfo.TimeInfo.DelayBetweenQueries"/>
                                        <Binding Path="SelectedDelayMeasure"/>
                                        
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <ComboBox ItemsSource="{Binding DelayMeasures}"
                                      SelectedItem="{Binding SelectedDelayMeasure}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Style="{StaticResource InfoHeadingsStyle}"
                                   Text="EndDate"/>
                        <TextBlock Style="{StaticResource InfoContentsStyle}"
                                   Text="{Binding SelectedSettingInfo.TimeInfo.EndDate}"/>
                    </StackPanel>
                </UniformGrid>
            </UniformGrid>

        </Grid>

        
        
    </Grid>
</UserControl>
