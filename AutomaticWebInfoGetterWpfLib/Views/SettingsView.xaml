<UserControl x:Class="AutomaticWebInfoGetterWpfLib.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomaticWebInfoGetterWpfLib.Views"
             xmlns:nav="clr-namespace:AutomaticWebInfoGetterWpfLib.Navigation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/SettingsViewDictionary.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center">Tasks info</TextBlock>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <ListBox ScrollViewer.CanContentScroll="True" 
                         ItemsSource="{Binding SettingsInfos}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.ContextMenu>
                                    <ContextMenu>
                                         <MenuItem Header="Edit"/>
                                        <MenuItem Header="Delete"/>
                                    </ContextMenu>
                                </StackPanel.ContextMenu>
                                <TextBlock Text="{Binding Url}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Grid.Row="2" 
                        Width="50" 
                        HorizontalAlignment="Right"
                        Content="+"
                        Command="{Binding AddSettingCommand}"
                        CommandParameter="{x:Static nav:VM.AddSetting}"/>
                
            </Grid>
            <StackPanel Grid.Column="1">
                <TextBlock Style="{StaticResource InfoHeadingsStyle}">URL</TextBlock>
                <TextBlock Style="{StaticResource InfoContentsStyle}">Some Url</TextBlock>
                <TextBlock Style="{StaticResource InfoHeadingsStyle}">XPath</TextBlock>
                <TextBlock Style="{StaticResource InfoContentsStyle}">Some XPath</TextBlock>
                <TextBlock Style="{StaticResource InfoHeadingsStyle}">Single node or list of nodes</TextBlock>
                <TextBlock Style="{StaticResource InfoContentsStyle}">Single</TextBlock>
                <TextBlock Style="{StaticResource InfoHeadingsStyle}">Frequency of getting info</TextBlock>
                <TextBlock Style="{StaticResource InfoContentsStyle}">Some Frequency</TextBlock>
            </StackPanel>

        </Grid>

        
        
    </Grid>
</UserControl>
