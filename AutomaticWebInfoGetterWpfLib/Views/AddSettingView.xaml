<UserControl x:Class="AutomaticWebInfoGetterWpfLib.Views.AddSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomaticWebInfoGetterWpfLib.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:xwt="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/AddSettingViewDictionary.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="UrlStackPanel">
                <TextBlock  
                    Style="{StaticResource HeadingsStyle}"
                    Text="URL"/>
                <TextBox 
                    Grid.Row="1" 
                    Style="{StaticResource TextInputAlignment}"
                    Text="{Binding URL, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        x:Name="PartsOfPageStackPanel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ListBox 
                        ItemsSource="{Binding SettingInfosOfDownloadedPartsOfPage}"/>
                    <Button 
                        Grid.Column="1"
                        Style="{StaticResource HorizontalAutoSizedRoundButtons}" 
                        Content="+"
                        Command="{Binding MakeVisibileAddSettingInfoOfDownloadedPartCommand}"/>
                </Grid>
                <StackPanel Visibility="{Binding AddDownloadedPartInfoVisibility, Mode=OneWay}">
                    <TextBlock Text="XPath"
                               Style="{StaticResource HeadingsStyle}"/>
                    <TextBox 
                        Text="{Binding XPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Header"
                               Style="{StaticResource HeadingsStyle}"/>
                    <TextBox
                        Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Style="{StaticResource HeadingsStyle}"
                            HorizontalAlignment="Right">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource OrientationOrWritingToRowOrColumnConverter}">
                                    <Binding Path="HorizontalOrientationOfWriting" Mode="OneWay"/>
                                    <Binding>
                                        <Binding.Source>
                                            <sys:Boolean>False</sys:Boolean> 
                                        </Binding.Source>
                                    </Binding>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <xwt:IntegerUpDown Grid.Column="1"
                                              HorizontalAlignment="Left"
                                              Value="{Binding RowOrColumn, Mode=TwoWay}"
                                              Minimum="1"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1"
                                Content="Add"
                                Command="{Binding AddSettingInfoOfDownloadedPartInCollectionCommand}"/>
                        <Button Grid.Column="2"
                                Content="Cancel"
                                Command="{Binding HideAddSettingInfoOfDownloadedPartCommand}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2"
                        x:Name="OrientionOfWritingUniformGrid">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                            Style="{StaticResource HeadingsStyle}"
                            HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource OrientationOrWritingToRowOrColumnConverter}">
                                <Binding Path="HorizontalOrientationOfWriting" Mode="OneWay"/>
                                <Binding>
                                    <Binding.Source>
                                        <sys:Boolean>True</sys:Boolean>
                                    </Binding.Source>
                                </Binding>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <xwt:IntegerUpDown Grid.Column="1"
                                              HorizontalAlignment="Left"
                                              Value="{Binding GlobalStartRowOrColumn, Mode=TwoWay}"
                                              Minimum="1"/>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <CheckBox Content="HorizontalOrientaionOfWriting" 
                          IsChecked="{Binding HorizontalOrientationOfWriting, Mode=TwoWay}"
                          HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="4"
                        x:Name="DistanceBetweenLinesStackPanel">
                <TextBlock
                       Text="Distance between lines"
                       Style="{StaticResource HeadingsStyle}"/>
                <xwt:IntegerUpDown
                                  Value="{Binding DistanceBetweenLines, Mode=TwoWay}"
                                  Minimum="1"/>
            </StackPanel>
            <StackPanel Grid.Row="5"
                        x:Name="DistanceBetweenNewParagraphs">
                <TextBlock
                       Text="Distance between new paragraphs of input"
                       Style="{StaticResource HeadingsStyle}"/>
                <xwt:IntegerUpDown 
                    Value="{Binding BetweenWritingNewInfoDistance,Mode=TwoWay}"
                    Minimum="1"/>
            </StackPanel>

            <StackPanel Grid.Row="6"
                        x:Name="FileNameStackPanel">
                <TextBlock Text="File name to save info"
                           Style="{StaticResource HeadingsStyle}"/>
                <TextBox 
                    Text="{Binding FileNameToWriteInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Row="7">
                <CheckBox Content="Run task only once" 
                          IsChecked="{Binding QueryOnlyOnce, Mode=TwoWay}"
                          HorizontalAlignment="Center"/> 
            </StackPanel>
            <StackPanel Grid.Row="8"
                        x:Name="DelayBetweenQueriesStackPanel"
                        IsEnabled="{Binding DateSettingsEnabled, Mode=OneWay}">
                <TextBlock 
                       Style="{StaticResource HeadingsStyle}"
                       Text="Delay between queries"/>
                <UniformGrid Columns="2">
                    <xwt:IntegerUpDown 
                        x:Name="NumericUpDown" 
                        HorizontalAlignment="Right"
                        Value="{Binding NumericRepresentationOfDelay, Mode=TwoWay}"/>
                    <ComboBox HorizontalAlignment="Left" 
                          Height="{Binding ElementName=NumericUpDown, Path=Height}"
                          ItemsSource="{Binding DelayMeasures}"
                          FontSize="14"
                          SelectedItem="{Binding SelectedDelayMeasure}"/>

                </UniformGrid>
            </StackPanel>
            <UniformGrid Grid.Row="9" 
                         x:Name="BorderDatesOfQueriesUniformGrid"
                             Columns="2">
                <StackPanel>
                    <TextBlock Style="{StaticResource HeadingsStyle}"
                               Text="Start date of queries"/>
                    <xwt:DateTimePicker HorizontalAlignment="Center"
                                Value="{Binding StartDate, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel
                    IsEnabled="{Binding DateSettingsEnabled, Mode=OneWay}">
                    <TextBlock Style="{StaticResource HeadingsStyle}"
                                   Text="End date of queries"/>
                    <xwt:DateTimePicker HorizontalAlignment="Center"
                                Value="{Binding EndDate, Mode=TwoWay}"/>
                </StackPanel>
            </UniformGrid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="0, 10, 5, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="2"
                    Content="Add"
                    Command="{Binding AddSettingInfoCommand}"/>
            <Button Grid.Column="3"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"/>
        </Grid>
    </Grid>
</UserControl>