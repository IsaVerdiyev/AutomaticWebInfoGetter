<UserControl x:Class="AutomaticWebInfoGetterWpfLib.Views.AddSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomaticWebInfoGetterWpfLib.Views"
             xmlns:ctrLib="clr-namespace:WpfCustomControlsByMe;assembly=WpfCustomControlsByMe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/AddSettingViewDictionary.xaml"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock 
                    Grid.Row="0" 
                    Style="{StaticResource HeadingsStyle}"
                    Text="URL"/>
            <TextBox 
                Grid.Row="1" 
                Style="{StaticResource TextInputAlignment}"
                Text="{Binding URL, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <TextBlock Grid.Row="2" 
                       Style="{StaticResource HeadingsStyle}"
                       Text="XPath"/>
            <TextBox Grid.Row="3"
                     Style="{StaticResource TextInputAlignment}"
                     Text="{Binding Path=XPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock  
                       Style="{StaticResource HeadingsStyle}"
                       Text="Check checkbox if single node should returned:  "/>
                <CheckBox Grid.Row="5" 
                      HorizontalAlignment="Center"
                      Content="Is single node"
                      VerticalContentAlignment="Center"
                      IsChecked="{Binding IsSingleNode}"/>
            </StackPanel>
            <TextBlock 
                    Grid.Row="5" 
                    Style="{StaticResource HeadingsStyle}"
                    Text="Delay between queries"/>
            <UniformGrid 
                Grid.Row="6" 
                Columns="2">
                    <ctrLib:NumericUpDown 
                        x:Name="NumericUpDown" 
                        FontSize="14" 
                        HorizontalAlignment="Right"/>
                    <ComboBox HorizontalAlignment="Left" 
                              Height="{Binding ElementName=NumericUpDown, Path=Height}">
                        <ComboBoxItem>Seconds</ComboBoxItem>
                        <ComboBoxItem>Minutes</ComboBoxItem>
                        <ComboBoxItem>Hours</ComboBoxItem>
                        <ComboBoxItem>Days</ComboBoxItem>
                    </ComboBox>
                </UniformGrid>
                <UniformGrid Grid.Row="7" 
                             Columns="2">
                    <StackPanel>
                    <TextBlock Style="{StaticResource HeadingsStyle}"
                               Text="Start date of queries"/>
                    <DatePicker HorizontalAlignment="Center"
                                SelectedDate="{Binding StartDate, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel>
                    <TextBlock Style="{StaticResource HeadingsStyle}"
                                   Text="End date of queries"/>
                    <DatePicker HorizontalAlignment="Center"
                                SelectedDate="{Binding EndDate, Mode=TwoWay}"/>
                    </StackPanel>
                </UniformGrid>
            </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1">Add</Button>
            <Button Grid.Column="2">Cancel</Button>
        </Grid>
    </Grid>
</UserControl>
