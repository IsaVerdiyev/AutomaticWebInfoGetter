<UserControl x:Class="AutomaticWebInfoGetterWpfLib.Views.AddSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomaticWebInfoGetterWpfLib.Views"
             xmlns:ctrLib="clr-namespace:WpfCustomControlsByMe;assembly=WpfCustomControlsByMe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/AddSettingViewDictionary.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock  
                    Style="{StaticResource HeadingsStyle}"
                    Text="URL"/>
                <TextBox 
                    Grid.Row="1" 
                    Style="{StaticResource TextInputAlignment}"
                    Text="{Binding URL, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ListBox 
                        ItemsSource="{Binding SettingInfosOfDownloadedPartsOfPage}"/>
                    <Button 
                        Grid.Column="1"
                        Style="{StaticResource HorizontalAutoSizedRoundButtons}" 
                        Content="+"
                        Command="{Binding MakeVisibileAddSettingInfoOfDownloadedPartCommand}"/>
                </Grid>
                <StackPanel Visibility="{Binding AddDownloadedPartInfoVisibility, Mode=OneWay}">
                    <TextBlock Text="XPath"
                               Style="{StaticResource HeadingsStyle}"/>
                    <TextBox 
                        Text="{Binding XPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Header"
                               Style="{StaticResource HeadingsStyle}"/>
                    <TextBox
                        Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="StartPosition"
                               Style="{StaticResource HeadingsStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Row"
                                   Style="{StaticResource HeadingsStyle}"
                                   HorizontalAlignment="Right"/>
                        <ctrLib:NumericUpDown Grid.Column="1"
                                              HorizontalAlignment="Left"
                                              Value="{Binding Row, Mode=TwoWay}"
                                              MinValue="1"/>
                        <TextBlock Grid.Column="2"
                                   Text="Column"
                                   Style="{StaticResource HeadingsStyle}"
                                   HorizontalAlignment="Right"/>
                        <ctrLib:NumericUpDown Grid.Column="3"
                                              HorizontalAlignment="Left"
                                              Value="{Binding Column, Mode=TwoWay}"
                                              MinValue="1"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1"
                                Content="Add"
                                Command="{Binding AddSettingInfoOfDownloadedPartInCollectionCommand}"/>
                        <Button Grid.Column="2"
                                Content="Cancel"
                                Command="{Binding HideAddSettingInfoOfDownloadedPartCommand}"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <TextBlock
                       Text="Distance between lines"
                       Style="{StaticResource HeadingsStyle}"/>
                <ctrLib:NumericUpDown
                                  Value="{Binding DistanceBetweenLines, Mode=TwoWay}"
                                  MinValue="1"/>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <TextBlock
                       Text="Distance between new paragraphs of input"
                       Style="{StaticResource HeadingsStyle}"/>
                <ctrLib:NumericUpDown 
                    Value="{Binding BetweenWritingNewInfoDistance,Mode=TwoWay}"
                    MinValue="1"/>
            </StackPanel>

            <StackPanel Grid.Row="4">
                <TextBlock Text="File name to save info"
                           Style="{StaticResource HeadingsStyle}"/>
                <TextBox 
                    Text="{Binding FileNameToWriteInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock  
                       Style="{StaticResource HeadingsStyle}"
                       Text="Check checkbox if single node should returned:  "/>
                <CheckBox 
                      HorizontalAlignment="Center"
                      Content="Is single node"
                      VerticalContentAlignment="Center"
                      IsChecked="{Binding IsSingleNode}"/>
            </StackPanel>
            <TextBlock 
                    Grid.Row="6" 
                    Style="{StaticResource HeadingsStyle}"
                    Text="Delay between queries"/>
            <UniformGrid 
                Grid.Row="7" 
                Columns="2">
                <ctrLib:NumericUpDown 
                        x:Name="NumericUpDown" 
                        HorizontalAlignment="Right"
                        Value="{Binding NumericRepresentationOfDelay, Mode=TwoWay}"/>
                <ComboBox HorizontalAlignment="Left" 
                          Height="{Binding ElementName=NumericUpDown, Path=Height}"
                          ItemsSource="{Binding DelayMeasures}"
                          FontSize="14"
                          SelectedItem="{Binding SelectedDelayMeasure}"/>

            </UniformGrid>
            <UniformGrid Grid.Row="8" 
                             Columns="2">
                <StackPanel>
                    <TextBlock Style="{StaticResource HeadingsStyle}"
                               Text="Start date of queries"/>
                    <DatePicker HorizontalAlignment="Center"
                                SelectedDate="{Binding StartDate, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Style="{StaticResource HeadingsStyle}"
                                   Text="End date of queries"/>
                    <DatePicker HorizontalAlignment="Center"
                                SelectedDate="{Binding EndDate, Mode=TwoWay}"/>
                </StackPanel>
            </UniformGrid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="0, 10, 5, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="62*"/>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="2"
                    Content="Add"
                    Command="{Binding AddSettingInfoCommand}"/>
            <Button Grid.Column="3"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"/>
        </Grid>
    </Grid>
</UserControl>