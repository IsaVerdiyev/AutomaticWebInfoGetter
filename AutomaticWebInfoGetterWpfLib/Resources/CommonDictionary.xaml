<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AutomaticWebInfoGetterWpfLib.Resources"
                    xmlns:conv="clr-namespace:AutomaticWebInfoGetterWpfLib.Converters"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:xwt="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">


    <conv:DoubleConverter x:Key="DoubleConverter"/>
    <conv:MarginConverter x:Key="MarginConverter"/>
    <conv:DoubleAdder x:Key="DoubleAdder"/>
    <conv:MarginToDoubleConverter x:Key="MarginToDoubleConverter"/>
    <conv:DoubleSubstractor x:Key="DoubleSubstractor"/>

    <sys:Double x:Key="FontSizeParameter">0.5</sys:Double>



    <Style TargetType="Control">
        <Setter Property="TextElement.FontSize" Value="{Binding RelativeSource={RelativeSource self}, Path=ActualHeight,UpdateSourceTrigger=PropertyChanged,  Converter={StaticResource DoubleConverter}, ConverterParameter={StaticResource FontSizeParameter}}"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Control}}"/>

    <Style TargetType="Label" BasedOn="{StaticResource {x:Type Control}}"/>

    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type Control}}"/>

    <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type Control}}"/>

    <Style TargetType="xwt:IntegerUpDown" BasedOn="{StaticResource {x:Type Control}}"/>

    <Style TargetType="xwt:DateTimePicker" BasedOn="{StaticResource {x:Type Control}}"/>

   




