    <sys:Double x:Key="MinWidthOfControls">100</sys:Double>
    
    <ThicknessAnimationUsingKeyFrames x:Key="OpeningAddXPathGridAnimation"
                                          
                                          BeginTime="00:00:00"
                                      FillBehavior="HoldEnd">
        <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,-120,0,0" />
        <SplineThicknessKeyFrame KeyTime="00:00:0.3" Value="0,0,0,0"/>
    </ThicknessAnimationUsingKeyFrames>

    
    <ThicknessAnimationUsingKeyFrames x:Key="ClosingAddXPathGridAnimation"
                                          
                                          BeginTime="00:00:00"
                                          FillBehavior="HoldEnd">
        <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0, 0, 0, 0"/>
        <SplineThicknessKeyFrame KeyTime="00:00:0.3" Value="0, -120, 0, 0"/>
    </ThicknessAnimationUsingKeyFrames>


    <Style TargetType="Label">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style TargetType="xwt:IntegerUpDown">
        <Setter Property="Width" Value="{StaticResource MinWidthOfControls}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="MinWidth" Value="{StaticResource MinWidthOfControls}"/>
        <Setter Property="Width" Value="auto"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    

</ResourceDictionary>